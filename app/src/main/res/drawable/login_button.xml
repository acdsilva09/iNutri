<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="false">
        <shape
            android:padding="10dp"
            android:shape="rectangle"
            android:layout_height="wrap_content"
            android:layout_width="150dp">

            <gradient
                android:startColor="#027D93"

                android:endColor="#0EC3C3"
                android:angle="0"/>

            <corners
                android:bottomLeftRadius="11dp"
                android:bottomRightRadius="11dp"
                android:topLeftRadius="11dp"
                android:topRightRadius="11dp">

            </corners>

        </shape>

    </item>


    <item android:state_pressed="true">
        <shape
            android:padding="10dp"
            android:shape="rectangle"
            android:layout_height="wrap_content"
            android:layout_width="150dp">

            <gradient
                android:startColor="#0E5153"

                android:endColor="#038581"
                android:angle="0"/>

            <corners
                android:bottomLeftRadius="11dp"
                android:bottomRightRadius="11dp"
                android:topLeftRadius="11dp"
                android:topRightRadius="11dp">

            </corners>

        </shape>

    </item>

</selector>

